{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"],
      "@guards/*": ["app/guards/*"],
      "@classes/*": ["app/classes/*"],
      "@interfaces/*": ["app/interfaces/*"],
      "@globals/*": ["app/globals/*"],
      "@dialogs/*": ["app/dialogs/*"],
      "@pages/*": ["app/pages/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
